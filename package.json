{
  "name": "linters",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "format": "prettier --write '*/**/*.{ts,md,json}'",
    "lint:ts": "eslint --ext .ts packages",
    "lerna:build": "lerna exec -- npx --no-install rollup -c ../../../rollup.config.js",
    "lerna:release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
    "semantic-release": "npm run lerna:build && npm run lerna:release"
  },
  "workspaces": [
    "packages/core/*",
    "packages/micro-generators/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@linters/commitlint-config": "1.3.1",
    "@linters/eslint-config-node": "1.2.2",
    "@linters/eslint-config-typescript": "^1.2.2",
    "@linters/prettier-config": "1.2.0",
    "@linters/semantic-release": "1.5.2",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "husky": "4.2.5",
    "lerna": "3.20.2",
    "lint-staged": "10.2.2",
    "prettier": "2.0.5",
    "rollup": "^2.9.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-typescript2": "^0.27.0",
    "semantic-release": "17.0.7",
    "semantic-release-monorepo": "7.0.2"
  }
}
